{
  "extends": [
    "config:base"
  ],
  "argocd": {
    "fileMatch": [
      "manifests/.+\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "manifests/.+\\.yaml$"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "manifests/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "repository: (?<depName>.*?)\n *tag: '(?<currentValue>.*)'\n",
        "repository: (?<depName>.*?)\n *pullPolicy: .*\n *tag: '(?<currentValue>.*)'\n",
        "dockerRepo=(?<depName>.*?)\n *tag: '(?<currentValue>.*)'\n"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}